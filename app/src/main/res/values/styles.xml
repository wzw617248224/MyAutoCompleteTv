<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/common_checkbox</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#747474</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:checked">true</item>
    </style>

    <style name="MyListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_55_dip</item>
        <item name="android:paddingLeft">@dimen/dimen_15_dip</item>
        <item name="android:paddingRight">@dimen/dimen_15_dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:textColor">@color/two_level_gray</item>
        <item name="android:textSize">@dimen/dimen_13_dip</item>
        <item name="android:textColorHint">@color/light_level_gray</item>
        <item name="android:paddingTop">@dimen/dimen_6_dip</item>
        <item name="android:paddingBottom">@dimen/dimen_6_dip</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textColor">@color/two_level_gray</item>
        <item name="android:textSize">@dimen/dimen_13_dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
